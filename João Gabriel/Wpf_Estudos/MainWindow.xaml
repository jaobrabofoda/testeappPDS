<Window x:Name="Menu" x:Class="Wpf_Estudos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Estudos"
        mc:Ignorable="d"
        Title="Menu" Height="345" Width="490">
    <Grid Margin="0,0,0,-6" RenderTransformOrigin="0.5,0.5">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF004AFF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="btCadastrar" Content="Cadastrar Contato" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Height="54" Width="212" BorderBrush="#00707070" Foreground="#FFFFF7E3" FontWeight="Bold" FontSize="14" Click="btCadastrar_Click" Background="#FF00F7AD"/>
        <Button x:Name="btListar" Content="Listar Contato" HorizontalAlignment="Center" Margin="0,186,0,0" VerticalAlignment="Top" Height="55" Width="212" BorderBrush="#00707070" Foreground="#FFFFF7E3" FontWeight="Bold" FontSize="14" Click="btListar_Click" Background="#FF0FCA00"/>

    </Grid>
</Window>
